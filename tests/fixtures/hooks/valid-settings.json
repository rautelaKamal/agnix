{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          { "type": "command", "command": "echo 'logging bash usage'", "timeout": 30 }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          { "type": "command", "command": "echo 'logging file write'" }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          { "type": "prompt", "prompt": "Summarize the work done in this session" }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          { "type": "command", "command": "echo 'session started'" }
        ]
      }
    ]
  }
}
